{
    "version":2,
    "builds":[
        {
            "src":"HRMS_API/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9"}
        },
        {
            "src":"build_files.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles"}
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/api/user/(.*)",
            "dest": "HRMS_API/wsgi.py"
        }
    ]
}